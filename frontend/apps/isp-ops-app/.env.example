# PWA Configuration
# =================
# VAPID public key for push notifications (get from backend team or generate using web-push)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key-here

# App Configuration
NEXT_PUBLIC_APP_NAME="dotmac FTTH Operations"
NEXT_PUBLIC_FAVICON="/favicon.ico"
NEXT_PUBLIC_APP_TYPE=isp-ops
NEXT_PUBLIC_PORTAL_TYPE=isp

# API Configuration
# =================
# Backend API base URL (ISP backend runs on port 8000)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# WebSocket URL for real-time features
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Internal API URL for server-side rewrites (container-to-container in Docker)
# INTERNAL_API_URL=http://isp-backend:8000

# Authentication Configuration
# ============================
# JWT secret (should match backend AUTH__JWT_SECRET_KEY)
# JWT_SECRET=dev-jwt-secret-key-change-me-min-32-chars

# Optional: GraphQL endpoint (defaults to /api/v1/graphql)
# NEXT_PUBLIC_GRAPHQL_URL=http://localhost:8000/api/v1/graphql

# Feature Flags
# =================
# Enable PWA features (install prompt, offline mode, etc.)
NEXT_PUBLIC_PWA_ENABLED=true

# Enable push notifications
NEXT_PUBLIC_PUSH_NOTIFICATIONS_ENABLED=true

# Enable background sync for offline data
NEXT_PUBLIC_BACKGROUND_SYNC_ENABLED=true

# Enable geolocation tracking
NEXT_PUBLIC_GEOLOCATION_ENABLED=true

# Development/Testing
# =================
# Enable bundle analyzer
# ANALYZE=true

# Enable Next.js debug mode
# DEBUG=true
